---
// Imports
// Components
import Seo from '../components/blocks/head/Seo.astro'
import Header from '../components/ui/Header.astro'
import Main from '../components/ui/Main.astro'
import Footer from '../components/ui/Footer.astro'
import Modal from '../components/blocks/modal/SignUp.astro'

// Styles
import '../assets/css/global.css'
// Fonts
import '@fontsource-variable/inter'
import '@fontsource-variable/outfit'
// Scripts
import Scriprs from '../components/scripts/LocalScripts.astro'
// Data
import { configData } from '../config/config'

// Props
type Props = {
	title?: string
	description?: string
	ogImage?: string
	canonical?: boolean
	noindex?: boolean
}

// Page Metadata
const {
	title = configData.siteTitle,
	description = configData.siteDescription,
	ogImage = configData.ogImage,
	canonical = configData.canonical,
	noindex = configData.noindex
} = Astro.props
---

<!doctype html>
<html lang="en" class="scroll-animation mode-auto">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<Seo
			title={title}
			description={description}
			ogImage={ogImage}
			canonical={canonical}
			noindex={noindex}
		/>
		<link rel="icon" href={configData.logo.src} type="image/svg+xml" />
		<link rel="sitemap" href="/sitemap-index.xml" />
		<meta name="generator" content={Astro.generator} />
		<meta name="theme-color" content="#134e4a" />
	</head>
	<body
		class:list={[
			{ ['mode-' + `${configData.mode}`]: configData.mode },
			{ ['scroll-animation']: configData.scrollAnimations }
		]}
	>
		<Header />
		<Main>
			<slot />
		</Main>
		<Footer />
		<Modal />
		<Scriprs />
	</body>
</html>
